@using System
<!DOCTYPE html>
<html lang="en" data-ng-app="beer-appreciation">
<head>
    <meta charset="utf-8" />
    <title data-ng-bind="title">@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="main-navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-left">
                    <img src="~/Content/images/tall_beer_white.png" style="height:40px;margin-top:4px;margin-right:15px;" class="pull-left hidden-xs" />
                    @Html.ActionLink("The Connoisseur", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse" id="main-nav-collapse" data-ng-controller="navigation-controller">
                <ul class="nav navbar-nav">
                    <li><a href="/#/home" data-toggle="collapse" data-target=".navbar-collapse.in">Home</a></li>
                    <li><a href="/#/events" data-toggle="collapse" data-target=".navbar-collapse.in">Events</a></li>
                    <li><a href="/#/beers" data-toggle="collapse" data-target=".navbar-collapse.in">Beverages</a></li>
                    <li class="dropdown ng-cloak" data-ng-show="isAdmin">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/#manufacturers" data-toggle="collapse" data-target=".navbar-collapse.in">Manufacturers</a></li>
                            <li><a href="/#beverageTypes" data-toggle="collapse" data-target=".navbar-collapse.in">Beverage Types</a></li>
                            <li><a href="/#beverageStyles" data-toggle="collapse" data-target=".navbar-collapse.in">Beverage Styles</a></li>
                            <li><a href="/#drinkingClubs" data-toggle="collapse" data-target=".navbar-collapse.in">Drinking Clubs</a></li>
                            <li><a href="/#users" data-toggle="collapse" data-target=".navbar-collapse.in">Users</a></li>
                            <li class="divider hidden"></li>
                            <li class="hidden"><a href="#">Event Registrations</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    
    <nav class="navbar navbar-default navbar-fixed-bottom hidden-xs" role="footer">
        <div class="container">
            <footer>
                <p>&copy; @DateTime.Now.Year - Company of Unknown New Technologies</p>
            </footer>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/underscore")
    @Scripts.Render("~/bundles/moment")
    @RenderSection("Scripts", required: false)
    
    
    <script type="text/javascript">
        $(function () {
            //$('#main-navbar .nav a').on('click', function () {
            //    var firstNavbar = $('.navbar-toggle').first();
            //    if (firstNavbar.css('display') != 'none') {
            //        firstNavbar.trigger("click");
            //    }
            //});
        });
    </script>
</body>
</html>
